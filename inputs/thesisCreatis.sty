%----------------- Redéfinition des commandes part et chapter -----------------%
\def\ligne#1{\rule{\textwidth}{#1}}

\makeatletter
\def\@part[#1]#2{%
			\vspace*{8cm}
      \ifnum \c@secnumdepth >-2\relax
        \refstepcounter{part}%
        \addcontentsline{toc}{part}{\thepart\hspace{1em}#1}%
      \fi
      \markboth{}{}%
      \begin{flushright}
				\interlinepenalty \@M
       	\normalfont
       	\ifnum \c@secnumdepth >-2\relax
        	\Huge \fontfamily{cmr} \selectfont ~\thepart \quad
       	\fi
       \Huge\fontfamily{cmr} \selectfont #2 \par
     	\end{flushright}
      \vspace*{0.5cm}
      \ligne{0.7mm}
      \@endpart}


\def\@makechapterhead#1{%
  \vspace*{50\p@}%
  {\parindent \z@ 
   \raggedleft 
   \normalfont
   \interlinepenalty\@M
   \ifnum \c@secnumdepth >\m@ne
   		\huge \@chapapp\space \Huge \thechapter\quad \par
   \fi
   \vspace*{1.5cm}
   \ligne{0.5mm}
   \Huge #1
   \ligne{0.5mm}
   \vskip 40\p@
  }}
